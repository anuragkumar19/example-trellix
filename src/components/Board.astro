---
interface Props {
    board: {
        name: string
        id: number
        color: string
    }
}

const {
    board: { id, color, name },
} = Astro.props
---

<div
    class='w-60 h-40 p-4 block border-b-8 shadow rounded hover:shadow-lg bg-white relative board'
    style={{ borderColor: color }}
>
    <a href={`/board/${id}`} class='font-bold'>{name}</a>
    <div>
        <button
            aria-label='Delete board'
            class='absolute top-4 right-4 hover:text-brand-red'
            type='button'
            id='btn'
            hx-delete='/home'
            hx-target='closest .board'
            hx-indicator='closest .board'
            hx-swap='delete'
            hx-vals={`{"boardId":${id}}`}
        >
            Delete
        </button>
    </div>
</div>
<style>
    .board.htmx-request {
        display: none !important;
    }
</style>
